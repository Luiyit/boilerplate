{# Top Menu Mobile #}
<div class="main-top-mobile menu-bar-reduced d-flex d-md-none flex-nowrap justify-content-between align-items-center px-4 py-2">
  <a href="/">
    <img class="main-logo black" src="{{ site.theme.link }}/boilerplate/public/img/logo-black.svg" alt="VonSite">
  </a>

  <div class="collapsed" type="button" data-toggle="collapse" data-target="#collapse-mobile-menu" aria-expanded="false" aria-controls="collapse-mobile-menu">
    <span class="mobile-bars-anchor mobile-icon">
      <i class="fas fa-bars"></i>
    </span>
  </div>
</div>

<div id="collapse-mobile-menu" class="collapse">
  <div class="menu-container d-block d-md-none">
    {% include "colapsed-menu.twig" with {'items': items, className: "inline-menu main-menu"} %}
  </div>
</div>