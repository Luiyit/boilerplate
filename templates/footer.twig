<footer id="footer" class="footer auto-py-50 {{ className }}">
  <div class="container">
    <div class="footer-box auto-py-50">
      <div class="container">
        <div class="row text-center text-lg-left">
          <div class="col-lg-12 mb-4 mb-lg-0">
            <div class="ff-open-sans-bold fz-small mb-3">SIGN UP FOR OUR NEWSLETTER</div>
            {% include "mailchimp_form.twig" with { id: 5 } %}
          </div>
          <div class="col-md-12 col-lg-6 mb-4 mb-md-0">
            <div class="ff-open-sans-bold fz-small mb-3">ABOUT CASSA VON</div>
            {% include "menu.twig" with {
              'items': footer_menu.get_items, 
              className: "footer-menu",
              itemClass: "fz-footer-menu d-inline-block pb-2"
              } %}
          </div>
          <div class="col-md-12 col-lg-6">
            <div class="ff-open-sans-bold fz-small mb-3">METODOS DE PAGO</div>
            <img class="" src="{{ site.theme.link }}/boilerplate/public/img/credit-cards.jpg" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="logo-bar text-center">
    <img class="Cassa VON" src="{{ site.theme.link }}/boilerplate/public/img/logo-black.svg" alt="">
  </div>
</footer>